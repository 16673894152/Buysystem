        </where>
    </select>
    <!-- 根据User插入数据方法 -->
    <insert id="insert" parameterType="User" useGeneratedKeys="false" keyColumn="userid" keyProperty="userid">
        insert into user
         (username,userpass)
        values (#{username},#{userpass});
    </insert>

